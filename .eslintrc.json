{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard",
        "eslint:recommended",
        "plugin:promise/recommended",
        "plugin:node/recommended"
    ],
    "plugins": [
        "promise",
        "node"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "node/no-unpublished-require": "off"
    }
}
